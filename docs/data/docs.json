{
  "version": "1.0.0",
  "lastUpdated": "2026-01-28",
  "categories": [
    {
      "id": "media",
      "name": "Media",
      "description": "Music and media file management",
      "icon": "music"
    },
    {
      "id": "system",
      "name": "System",
      "description": "Health checks and system monitoring",
      "icon": "activity"
    }
  ],
  "endpoints": [
    {
      "id": "music-list",
      "category": "media",
      "title": "List Music Files",
      "description": "Retrieve a paginated list of available audio tracks from the music library.",
      "method": "GET",
      "endpoint": "/music",
      "isPublic": true,
      "requiresAuth": false,
      "autoCheck": false,
      "inputs": [
        {
          "name": "limit",
          "type": "number",
          "label": "Limit",
          "placeholder": "25",
          "required": false,
          "default": 25,
          "max": 100
        }
      ],
      "responseExample": [
        "test.wav",
        "lofi.mp3",
        "ambient.flac"
      ],
      "errorCodes": [
        {
          "code": 500,
          "message": "Failed to read music directory"
        }
      ],
      "rateLimit": {
        "requests": 300,
        "window": "1m"
      }
    },
    {
      "id": "music-get",
      "category": "media",
      "title": "Get Music File",
      "description": "Stream or download a specific audio file by name.",
      "method": "GET",
      "endpoint": "/music/:name",
      "isPublic": true,
      "requiresAuth": false,
      "autoCheck": false,
      "inputs": [
        {
          "name": "name",
          "type": "string",
          "label": "Music Filename",
          "placeholder": "lofi.mp3",
          "required": true,
          "location": "path"
        }
      ],
      "responseExample": "Binary audio stream",
      "errorCodes": [
        {
          "code": 404,
          "message": "Music file not found"
        },
        {
          "code": 400,
          "message": "Invalid filename"
        }
      ],
      "rateLimit": {
        "requests": 100,
        "window": "1m"
      }
    },
    {
      "id": "health-check",
      "category": "system",
      "title": "Health Check",
      "description": "Simple liveness probe for load balancers and monitoring systems.",
      "method": "GET",
      "endpoint": "/health",
      "isPublic": true,
      "requiresAuth": false,
      "autoCheck": true,
      "inputs": [],
      "responseExample": {
        "status": "ok",
        "timestamp": "2026-01-28T10:45:00Z",
        "uptime": 3600
      },
      "errorCodes": [],
      "rateLimit": {
        "requests": 100,
        "window": "1m"
      }
    }
  ]
}
